<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pf="http://schemas.uniguy.com/presentation"
                    xmlns:local_wd="clr-namespace:JinHong.Windows.Data">
    
    <!-- TODO: 放一些全局可饮用的资源, 比如转换器等等 -->
    <pf:BoolToOppositeBoolConverter x:Key="convBoolToOppositeBool"/>
    <pf:DebugConverter x:Key="convDebug"/>
    <pf:BoolToVisibilityConverter x:Key="conBoolToVisibility"/>
    <local_wd:DummyConverter x:Key="convDummy"/>

    <pf:IndexConverter x:Key="convIndex" Offset="0"/>
    <pf:IndexConverter x:Key="convIndex1" Offset="1"/>

    <pf:CaseWhenConverter x:Key="convBoolToChar" Format="True|✓|✗"/>
    <pf:CaseWhenConverter x:Key="convBoolToForeground" Format="True|Green|Red"/>

    <local_wd:BirthDateToAgeConverter x:Key="convBirthDateToAge"/>
    
    <local_wd:MenuItemNameToImageSourceConverter x:Key="convMenuItemNameToImageSource"/>
    <local_wd:MenuItemNameToAbbreviationConverter x:Key="convMenuItemNameToAbbreviation"/>

    <local_wd:DirectoryToNameConverter x:Key="convDirectoryToName"/>
    <local_wd:FileToNameConverter x:Key="convFileToName"/>

    <local_wd:IsNullOrEmptyConverter x:Key="conIsNullOrEmpty"/>
    <local_wd:IsNotCurrentMonthConverter x:Key="convIsNotCurrentMonth"/>
    <local_wd:PathToImageSourceConverter x:Key="convPathToImageSource"/>

    <!-- TODO. others... -->
</ResourceDictionary>