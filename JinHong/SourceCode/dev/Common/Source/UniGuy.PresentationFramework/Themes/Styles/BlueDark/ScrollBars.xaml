                                      StrokeEndLineCap="Square" StrokeStartLineCap="Square" Margin="1,0,0,0" 
                                      VerticalAlignment="Top" 
                                      Data="M0,0 L0,1"/>
                            </Grid>
                        </Grid>
                        <Border x:Name="Border" BorderBrush="{DynamicResource br_scrollBar_btn_border_normal}" Background="{x:Null}" BorderThickness="0.5" CornerRadius="2" HorizontalAlignment="Stretch" Width="Auto" Margin="0" SnapsToDevicePixels="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsFocused" Value="true"/>

                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="BG_Fill" Value="{DynamicResource grad_horzscrollBar_btn_fill_hover}"/>
                            <Setter Property="BorderBrush" TargetName="Border_Blur" Value="{DynamicResource br_scrollBar_btn_border_hover}"/>
                            <Setter Property="Effect" TargetName="Border_Blur" Value="{DynamicResource fx_blurEffect_highlight_scrollBar_btn}"/>
                            <Setter Property="Visibility" TargetName="Border_Blur" Value="Visible"/>
                            <Setter Property="Opacity" TargetName="Container" Value="{DynamicResource opac_scrollBar_btn_container_hover}"/>
                            <Setter Property="Fill" TargetName="highlight_left" Value="{DynamicResource br_scrollBar_btn_thumbHighlight_hover}"/>
                            <Setter Property="Fill" TargetName="shadow_left" Value="{DynamicResource br_scrollBar_btn_thumbShadow_hover}"/>
                            <Setter Property="Fill" TargetName="highlight_mid" Value="{DynamicResource br_scrollBar_btn_thumbHighlight_hover}"/>
                            <Setter Property="Fill" TargetName="shadow_mid" Value="{DynamicResource br_scrollBar_btn_thumbShadow_hover}"/>
                            <Setter Property="Fill" TargetName="highlight_right" Value="{DynamicResource br_scrollBar_btn_thumbHighlight_hover}"/>
                            <Setter Property="Fill" TargetName="shadow_right" Value="{DynamicResource br_scrollBar_btn_thumbShadow_hover}"/>
                        </Trigger>

                        <Trigger Property="IsDragging" Value="True">
                            <Setter Property="Background" TargetName="BG_Fill" Value="{DynamicResource grad_horzscrollBar_btn_fill_dragging}"/>
                            <Setter Property="BorderBrush" TargetName="Border_Blur" Value="{DynamicResource br_scrollBar_btn_border_dragging}"/>
                            <Setter Property="Effect" TargetName="Border_Blur" Value="{DynamicResource fx_blurEffect_highlight_scrollBar_btn}"/>
                            <Setter Property="Visibility" TargetName="Border_Blur" Value="Visible"/>
                            <Setter Property="Opacity" TargetName="Container" Value="{DynamicResource opac_scrollBar_btn_container_dragging}"/>
                            <Setter Property="Stroke" TargetName="highlight_left" Value="{DynamicResource br_scrollBar_btn_thumbHighlight_dragging}"/>
                            <Setter Property="Stroke" TargetName="shadow_left" Value="{DynamicResource br_scrollBar_btn_thumbShadow_dragging}"/>
                            <Setter Property="Stroke" TargetName="highlight_mid" Value="{DynamicResource br_scrollBar_btn_thumbHighlight_dragging}"/>
                            <Setter Property="Stroke" TargetName="shadow_mid" Value="{DynamicResource br_scrollBar_btn_thumbShadow_dragging}"/>
                            <Setter Property="Stroke" TargetName="highlight_right" Value="{DynamicResource br_scrollBar_btn_thumbHighlight_dragging}"/>
                            <Setter Property="Stroke" TargetName="shadow_right" Value="{DynamicResource br_scrollBar_btn_thumbShadow_dragging}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="false"/>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Scroll_Bar_Page_Button" TargetType="{x:Type RepeatButton}">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">

                    <Border SnapsToDevicePixels="True" Background="{DynamicResource br_scrollBar_page_btn}" VerticalAlignment="Stretch"/>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="VerticalScrollBarTemplate" TargetType="{x:Type ScrollBar}">

        <Grid x:Name="GridRoot" Background="{DynamicResource grad_scrollBar_fill}" Width="18" MinWidth="18" MaxWidth="18" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="18"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="18"/>
            </Grid.RowDefinitions>

            <RepeatButton Grid.Row="0" Height="18" x:Name="IncreaseRepeat" Style="{DynamicResource Scroll_Bar_LineBtn_Up}" Command="ScrollBar.LineUpCommand"/>
            <!-- Track is a special layout container which sizes the thumb and the repeat button which do jump scrolling either side of it -->
            <Track Grid.Row="1" x:Name="PART_Track" IsDirectionReversed="True">
                <Track.DecreaseRepeatButton>
                    <RepeatButton x:Name="PageUp" Style="{DynamicResource Scroll_Bar_Page_Button}" Command="ScrollBar.PageUpCommand"/>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb Style="{DynamicResource Vert_Scroll_Bar_Thumb_Button}" Height="Auto" />
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                    <RepeatButton x:Name="PageDown" Style="{DynamicResource Scroll_Bar_Page_Button}" Command="ScrollBar.PageDownCommand"/>
                </Track.IncreaseRepeatButton>
            </Track>
            <RepeatButton Grid.Row="2" Height="18" x:Name="DecreaseRepeat" Style="{DynamicResource Scroll_Bar_LineBtn_Down}" Command="ScrollBar.LineDownCommand"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="HorizontalScrollBarTemplate" TargetType="{x:Type ScrollBar}">
        <Grid x:Name="GridRoot" Background="{DynamicResource grad_horzscrollBar_fill}" Height="18" MinHeight="18" MaxHeight="18" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <RepeatButton Grid.Column="0" Width="18" x:Name="IncreaseRepeat" Style="{DynamicResource Scroll_Bar_LineBtn_Left}" Command="ScrollBar.LineLeftCommand"/>
            <!-- Track is a special layout container which sizes the thumb and the repeat button which do jump scrolling either side of it -->
            <Track Grid.Column="1" x:Name="PART_Track" IsDirectionReversed="False">
                <Track.DecreaseRepeatButton>
                    <RepeatButton x:Name="PageUp" Style="{DynamicResource Scroll_Bar_Page_Button}" Command="ScrollBar.PageLeftCommand"/>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb Style="{DynamicResource Horz_Scroll_Bar_Thumb_Button}" Width="Auto" />
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                    <RepeatButton x:Name="PageDown" Style="{DynamicResource Scroll_Bar_Page_Button}" Command="ScrollBar.PageRightCommand"/>
                </Track.IncreaseRepeatButton>
            </Track>
            <RepeatButton Grid.Column="2" Width="18" x:Name="DecreaseRepeat" Style="{DynamicResource Scroll_Bar_LineBtn_Right}" Command="ScrollBar.LineRightCommand"/>
        </Grid>
    </ControlTemplate>



    <Style TargetType="{x:Type ScrollBar}" x:Key="{x:Static local_def:ResourceDefinitions.ScrollBarStyleKey}">
        <!-- scrollbar -->
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>


        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Template" Value="{StaticResource HorizontalScrollBarTemplate}" />
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="18" />
            </Trigger>

            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}" />
                <Setter Property="Width" Value="18" />
                <Setter Property="Height"  Value="Auto" />
            </Trigger>
        </Style.Triggers>

    </Style>


    <!-- Single line of code to make scroll bar style be used -->
    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource {x:Static local_def:ResourceDefinitions.ScrollBarStyleKey}}" />



</ResourceDictionary>

    
    