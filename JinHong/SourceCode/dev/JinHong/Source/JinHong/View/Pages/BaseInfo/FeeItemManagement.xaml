                </DockPanel>
            </Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <Button x:Name="buttonEnter" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    Command="{Binding AddNewCommand }" ToolTip="新增">
