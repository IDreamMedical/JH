                    <TextBlock Text="新增" VerticalAlignment="Center"/>
                </DockPanel>
            </Button>
            <Button x:Name="buttonLeave" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    Command="{Binding EditCommand}" ToolTip="修改">
